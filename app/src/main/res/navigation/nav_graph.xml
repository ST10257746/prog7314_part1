<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Authentication Fragments -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.prog7314_part1.ui.user.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_loginFragment_to_setupGoalsFragment"
            app:destination="@id/setupGoalsFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.prog7314_part1.ui.user.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <!-- Arguments for Google Sign-In profile completion -->
        <argument
            android:name="isGoogleProfileCompletion"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="googleEmail"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="googleDisplayName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_registerFragment_to_setupGoalsFragment"
            app:destination="@id/setupGoalsFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/setupGoalsFragment"
        android:name="com.example.prog7314_part1.ui.user.SetupGoalsFragment"
        android:label="Setup Goals"
        tools:layout="@layout/fragment_setup_goals">

        <action
            android:id="@+id/action_setupGoalsFragment_to_homeFragment"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <!-- Main App Fragments -->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.prog7314_part1.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/nav_profile"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_progress"
        android:name="com.example.prog7314_part1.ui.progress.ProgressFragment"
        android:label="Progress"
        tools:layout="@layout/fragment_progress" />

    <fragment
        android:id="@+id/nav_session"
        android:name="com.example.prog7314_part1.ui.session.SessionFragment"
        android:label="Session"
        tools:layout="@layout/fragment_session">

        <!-- Define workoutId argument as optional here -->
        <argument
            android:name="workoutId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_workout"
        android:name="com.example.prog7314_part1.ui.workout.WorkoutFragment"
        android:label="Workout"
        tools:layout="@layout/fragment_workout">

        <action
            android:id="@+id/action_workout_to_workoutList"
            app:destination="@id/workoutListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_workout_to_createCustomWorkout"
            app:destination="@id/createCustomWorkoutFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_workout_to_sessionFragment"
            app:destination="@id/nav_session"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_nutrition"
        android:name="com.example.prog7314_part1.ui.nutrition.NutritionFragment"
        android:label="Nutrition"
        tools:layout="@layout/fragment_nutrition">
        <action
            android:id="@+id/action_nutrition_to_diary"
            app:destination="@id/nutritionDiaryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nutritionDiaryFragment"
        android:name="com.example.prog7314_part1.ui.nutrition.NutritionDiaryFragment"
        android:label="Nutrition Diary"
        tools:layout="@layout/fragment_nutrition_diary" />

    <fragment
        android:id="@+id/workoutListFragment"
        android:name="com.example.prog7314_part1.ui.workout.WorkoutListFragment"
        android:label="Workout List"
        tools:layout="@layout/fragment_workout_list">

        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/createCustomWorkoutFragment"
        android:name="com.example.prog7314_part1.ui.workout.CreateCustomWorkoutFragment"
        android:label="Create Custom Workout"
        tools:layout="@layout/fragment_create_custom_workout" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.prog7314_part1.ui.user.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_profileFragment_to_setupGoalsFragment"
            app:destination="@id/setupGoalsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment android:id="@+id/sessionFragment" android:name="com.example.prog7314_part1.ui.session.SessionFragment" android:label="Session"> <argument android:name="workoutId" app:argType="string" /> </fragment>
</navigation>
