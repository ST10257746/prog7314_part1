<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/> <!-- White background -->
            <stroke android:width="2dp" android:color="#3A86FF"/> <!-- Primary color on focus -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Light grey background -->
            <stroke android:width="1dp" android:color="#D0CECE"/> <!-- Neutral border -->
            <corners android:radius="12dp"/>
            <padding android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp"/>
        </shape>
    </item>

</selector>
