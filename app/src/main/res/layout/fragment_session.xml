<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                    android:text="Workout Session"
        android:textColor="@color/Text"
        android:textStyle="bold"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upper Body Blast • 45 min"
                    android:textColor="@color/Text"
                    android:textSize="16sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_session"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:contentDescription="Session Icon" />

        </LinearLayout>

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <!-- Circular Progress Background -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp">

                <!-- Background Circle -->
                <View
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_card" />

                <!-- Progress Circle (will be animated) -->
                <View
                    android:id="@+id/progressCircle"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:background="@color/Primary"
                    android:alpha="0.3" />

                <!-- Timer Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                        android:text="25:30"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="elapsed"
        android:textColor="@color/Text"
                        android:textSize="14sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </FrameLayout>

            <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

        <Button
            android:id="@+id/btnStart"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="▶"
                    android:textSize="24sp"
            android:backgroundTint="@color/Primary"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnPause"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="⏸"
                    android:textSize="24sp"
            android:backgroundTint="@color/Secondary"
                    android:textColor="@color/Text"
                    android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnReset"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="⏹"
                    android:textSize="24sp"
                    android:backgroundTint="@color/Accent"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

        <!-- Current Exercise -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Exercise"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Push-ups"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chest, Triceps, Shoulders"
                        android:textColor="@color/Text"
                        android:textSize="14sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_fitness"
                    android:background="@drawable/bg_card"
                    android:padding="12dp"
                    android:contentDescription="Exercise" />

            </LinearLayout>

            <!-- Sets and Reps -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of 4"
                        android:textColor="@color/Text"
                        android:textSize="12sp"
                        android:alpha="0.8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/Primary"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="reps"
                        android:textColor="@color/Text"
                        android:textSize="12sp"
                        android:alpha="0.8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginStart="8dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90 sec"
                        android:textColor="@color/Accent"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rest"
                        android:textColor="@color/Text"
                        android:textSize="12sp"
                        android:alpha="0.8" />

                </LinearLayout>

            </LinearLayout>

            <!-- Next Exercise Preview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:background="@color/Background"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next: Dumbbell Rows"
                    android:textColor="@color/Text"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 sets • 10 reps"
                    android:textColor="@color/Text"
                    android:textSize="14sp"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Workout Progress -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout Progress"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <!-- Progress Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/Primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Warm-up (5 min)"
                    android:textColor="@color/Text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textColor="@color/Secondary"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/Primary"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Push-ups (4 sets)"
                    android:textColor="@color/Text"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/4"
                    android:textColor="@color/Accent"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@color/Background"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dumbbell Rows (3 sets)"
                    android:textColor="@color/Text"
                    android:textSize="14sp"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/3"
                    android:textColor="@color/Text"
                    android:textSize="14sp"
                    android:alpha="0.7" />

            </LinearLayout>

            <!-- Overall Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Overall Progress"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="68%"
                        android:textColor="@color/Primary"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="68"
                    android:progressTint="@color/Primary"
                    android:backgroundTint="@color/Background" />

            </LinearLayout>

        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Skip Exercise"
                android:backgroundTint="@color/Background"
                android:textColor="@color/Text"
                android:layout_marginEnd="8dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End Workout"
            android:backgroundTint="@color/Accent"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>


