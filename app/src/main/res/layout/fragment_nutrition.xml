<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Nutrition Layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="100dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track your daily intake"
                    android:textColor="@color/Text"
                    android:textSize="18sp"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_progress"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:contentDescription="Nutrition Icon" />

        </LinearLayout>

        <!-- Daily Goals Overview -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Progress"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Calories Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories Consumed"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/caloriesGoalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,847 of 2,200 kcal"
                        android:textColor="@color/Text"
                        android:textSize="16sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/caloriesPercentageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="84%"
                    android:textColor="@color/Secondary"
                    android:textStyle="bold"
                    android:textSize="26sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/caloriesProgressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="84"
                android:progressTint="@color/Secondary"
                android:backgroundTint="@color/Background" />        </LinearLayout>

        <!-- Macronutrients Progress -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macronutrients"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Protein -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/proteinCurrentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120g"
                    android:textColor="@color/Secondary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 150g"
                    android:textColor="@color/Text"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="80"
                    android:progressTint="@color/Secondary"
                    android:backgroundTint="@color/Background"
                    style="@android:style/Widget.ProgressBar.Horizontal" />

            </LinearLayout>

            <!-- Carbs -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/carbsCurrentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="220g"
                    android:textColor="@color/Primary"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 250g"
                    android:textColor="@color/Text"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="88"
                    android:progressTint="@color/Primary"
                    android:backgroundTint="@color/Background"
                    style="@android:style/Widget.ProgressBar.Horizontal" />

            </LinearLayout>

            <!-- Fats -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fats"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fatsCurrentText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60g"
                    android:textColor="@color/Accent"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 70g"
                    android:textColor="@color/Text"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="86"
                    android:progressTint="@color/Accent"
                    android:backgroundTint="@color/Background"
                    style="@android:style/Widget.ProgressBar.Horizontal" />

            </LinearLayout>

        </LinearLayout>

        <!-- Daily Macro Breakdown Pie Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Breakdown"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="20dp" />

            <!-- Pie Chart with Center Text Overlay -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">

                <!-- MPAndroidChart Pie Chart -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/macroPieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Center Text Overlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalCaloriesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,847"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal total"
                        android:textColor="@color/Text"
                        android:textSize="16sp"
                        android:alpha="0.8" />

                </LinearLayout>

            </FrameLayout>

            <!-- Legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/Secondary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Protein (30%)"
                        android:textColor="@color/Text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="360 kcal"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/Primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Carbohydrates (45%)"
                        android:textColor="@color/Text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="830 kcal"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/Accent"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fats (25%)"
                        android:textColor="@color/Text"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="440 kcal"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Today's Meals -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today's Meals"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/noMealsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No meals logged yet"
                android:textColor="@color/Text"
                android:textSize="14sp"
                android:alpha="0.7"
                android:visibility="gone" />

        </LinearLayout>

        <!-- RecyclerView for Today's Meals -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mealsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="12dp" />

        <!-- Hydration Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_fitness"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Water" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Water Intake"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/waterGoalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 of 8 glasses"
                        android:textColor="@color/Text"
                        android:textSize="16sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/waterPercentageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75%"
                    android:textColor="@color/Primary"
                    android:textStyle="bold"
                    android:textSize="22sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/waterProgressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="75"
                android:progressTint="@color/Primary"
                android:backgroundTint="@color/Background" />

            <Button
                android:id="@+id/addWaterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Add Glass"
                android:backgroundTint="@color/Primary"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/logMealButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log New Meal"
                android:backgroundTint="@color/Primary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/icon_progress"
                android:drawablePadding="12dp" />

            <Button
                android:id="@+id/viewDiaryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Nutrition Diary"
                android:backgroundTint="@color/Secondary"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:padding="16dp"
                android:drawableStart="@drawable/icon_progress"
                android:drawablePadding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>