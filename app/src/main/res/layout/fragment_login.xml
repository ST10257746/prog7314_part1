<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/Background"
    android:padding="24dp">

    <!-- App Logo / Icon -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="149dp"
        android:layout_height="150dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="FitTrackr Logo"
        android:src="@drawable/icon_fitness" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textColor="@color/Text"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in to continue your fitness journey"
        android:textColor="@color/Text"
        android:textSize="16sp"
        android:alpha="0.8"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/Primary"
        android:padding="12dp"
        android:textColor="@color/Text"
        android:textColorHint="@color/Text"
        android:layout_marginBottom="16dp" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:backgroundTint="@color/Primary"
        android:padding="12dp"
        android:textColor="@color/Text"
        android:textColorHint="@color/Text"
        android:layout_marginBottom="24dp" />

    <!-- Forgot Password -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/Primary"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="end" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/Primary"
        android:padding="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Divider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/Text"
            android:alpha="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  or  "
            android:textColor="@color/Text"
            android:textSize="14sp"
            android:alpha="0.7" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/Text"
            android:alpha="0.3" />

    </LinearLayout>

    <!-- Google SSO Button -->
    <Button
        android:id="@+id/googleLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue with Google"
        android:textColor="@color/Text"
        android:backgroundTint="@color/Secondary"
        android:padding="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:drawableStart="@drawable/icon_fitness"
        android:drawablePadding="12dp" />

    <!-- Register Link -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="14sp"
            android:textColor="@color/Text"
            android:alpha="0.8" />

        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:textSize="14sp"
            android:textColor="@color/Primary"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Terms -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By signing in, you agree to our Terms of Service and Privacy Policy"
        android:textSize="12sp"
        android:textColor="@color/Text"
        android:alpha="0.6"
        android:gravity="center" />

</LinearLayout>
