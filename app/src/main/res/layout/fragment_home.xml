<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good morning!"
                    android:textColor="@color/Text"
                    android:textSize="16sp"
                    android:alpha="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_fitness"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:contentDescription="Profile" />

        </LinearLayout>

        <!-- Daily Goals Progress -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Progress"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Steps Goal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_home"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Steps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7,842"
                    android:textColor="@color/Primary"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 10,000 steps"
                    android:textColor="@color/Text"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="78"
                    android:progressTint="@color/Primary"
                    android:backgroundTint="@color/Background"
                    style="@android:style/Widget.ProgressBar.Horizontal" />

            </LinearLayout>

            <!-- Calories Goal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_workout"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Calories" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="512"
                    android:textColor="@color/Secondary"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 2,200 kcal"
                    android:textColor="@color/Text"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="23"
                    android:progressTint="@color/Secondary"
                    android:backgroundTint="@color/Background"
                    style="@android:style/Widget.ProgressBar.Horizontal" />

            </LinearLayout>

            <!-- Active Minutes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/bg_card"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_session"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Active Minutes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textColor="@color/Accent"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of 60 min"
                    android:textColor="@color/Text"
                    android:textSize="12sp"
                    android:alpha="0.7" />

                <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:progress="75"
                    android:progressTint="@color/Accent"
                    android:backgroundTint="@color/Background"
                    style="@android:style/Widget.ProgressBar.Horizontal" />

            </LinearLayout>

        </LinearLayout>

        <!-- Current Activity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/Accent"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Morning Run"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running"
                    android:textColor="@color/Primary"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duration: 25:30"
                    android:textColor="@color/Text"
                    android:textSize="14sp"
                    android:alpha="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="184 kcal"
                    android:textColor="@color/Secondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Achievements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Achievements"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_progress"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5K Runner"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_fitness"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7-Day Streak"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_card"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/icon_workout"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="Badge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Workout"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start New Workout Session"
                android:backgroundTint="@color/Primary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/icon_session"
                android:drawablePadding="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Nutrition"
                android:backgroundTint="@color/Secondary"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/icon_progress"
                android:drawablePadding="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Progress"
                android:backgroundTint="@color/Accent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="16dp"
                android:drawableStart="@drawable/icon_progress"
                android:drawablePadding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>


