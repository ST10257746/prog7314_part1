<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_default_profile"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"/>

        <!-- Weight Goal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight Goal (kg)"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/weightGoalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 70"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Workout Frequency -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout Frequency (times per week)"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/workoutGoalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 4"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Steps Goal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps Goal (per day)"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/stepsGoalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 10000"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Calories Goal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories Goal (kcal per day)"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/caloriesGoalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 2200"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Protein Goal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Protein Intake Goal (g per day)"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/proteinGoalInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 150"
            android:inputType="number"
            android:background="@drawable/input_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Personal Challenges / Milestones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Challenges / Milestones"
            android:textColor="@color/Text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>

        <!-- Container for Dynamic Challenges -->
        <LinearLayout
            android:id="@+id/challengesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"/>

        <!-- Add / Remove Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/addChallengeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:backgroundTint="@color/Secondary"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/removeChallengeButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="âˆ’"
                android:backgroundTint="@color/Accent"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveGoalsButton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/Primary"
            android:padding="12dp"
            android:text="Save Goals"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
