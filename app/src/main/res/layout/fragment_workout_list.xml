<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Background"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_progress"
            android:background="@drawable/bg_card"
            android:padding="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCategoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_workouts"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvCategoryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workouts_for_category"
                android:textColor="@color/Text"
                android:textSize="16sp"
                android:alpha="0.8"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_workout"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:contentDescription="Workout Icon" />

    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_card"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_fitness"
            android:layout_marginEnd="12dp"
            android:contentDescription="Search" />

        <EditText
            android:id="@+id/etSearchWorkouts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_workouts"
            android:textColor="@color/Text"
            android:textColorHint="@color/Text"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:alpha="0.7"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Workout Count -->
    <TextView
        android:id="@+id/tvWorkoutCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 workouts found"
        android:textColor="@color/Text"
        android:textSize="16sp"
        android:alpha="0.8"
        android:layout_marginBottom="16dp" />

    <!-- Workouts RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoryWorkouts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/llEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/icon_progress"
            android:layout_marginBottom="16dp"
            android:alpha="0.5"
            android:contentDescription="No workouts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_workouts_found"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/try_adjusting_search"
            android:textColor="@color/Text"
            android:textSize="14sp"
            android:alpha="0.7"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>