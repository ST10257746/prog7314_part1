<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_card"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_workout"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/Primary"
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Workout Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityWorkoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running"
            android:textColor="@color/Text"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activityWorkoutStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 cal â€¢ 150 steps"
            android:textColor="@color/Text"
            android:textSize="14sp"
            android:alpha="0.7"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/activityWorkoutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today, 10:30"
        android:textColor="@color/Text"
        android:textSize="12sp"
        android:alpha="0.6" />

</LinearLayout>

